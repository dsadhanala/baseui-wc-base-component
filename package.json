{
    "name": "baseui-wc-base-component",
    "version": "0.5.0",
    "description": "re-usable base customElement to avoid repeated bootstrap code, flexible to choose own rendering or use hyperHTML/LitHTML.",
    "main": "dist/baseui-wc-base-component.js",
    "module": "src/index.js",
    "scripts": {
        "prepublishOnly": "npm run release",
        "start": "npm run server",
        "clean": "shx rm -rf dist lib && shx echo build folders clean!",
        "test": "NODE_ENV=test jest --config jest.config.js --coverage",
        "test:watch": "NODE_ENV=test jest --config jest.config.js --watch",
        "tc": "npx tsc --noEmit",
        "tcw": "npm run tc -- -w",
        "lint": "npx tslint './src/**/*.{js,jsx,ts,tsx}' --project tsconfig.json",
        "lint:fix": "npx tslint './src/**/*.{js,jsx,ts,tsx}' --fix --project tsconfig.json",
        "server": "npm run clean && NODE_ENV=development npx webpack-dev-server --config webpack.dev.js --hot",
        "build": "npm run build-dev && npm run build-min",
        "build:types": "npx tsc --emitDeclarationOnly",
        "build-esm": "npx tsc -m es6 --outDir lib/esm --declarationDir lib/esm",
        "build-dev": "NODE_ENV=production webpack --config webpack.prod.js",
        "build-min": "NODE_ENV=production webpack --env.min --config webpack.prod.js",
        "release": "npm run clean && npm run lint:fix && npm run build:types && npm run build-esm && npm run build",
        "bundleServ": "./node_modules/.bin/live-server --port=1919 --host=0.0.0.0 --open='./demo/'"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dsadhanala/baseui-wc-base-component.git"
    },
    "keywords": [
        "web component",
        "customElement",
        "baseUI customElement",
        "customElement with lit-html",
        "customElement with hyper-html",
        "ES6 template literals",
        "ES6 mixin"
    ],
    "author": "dsadhanala@gmail.com",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dsadhanala/wc-base-component/issues"
    },
    "homepage": "https://github.com/dsadhanala/wc-base-component#readme",
    "dependencies": {
        "hyperhtml": "^2.14.0",
        "lit-html": "^0.14.0"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.2",
        "@babel/core": "^7.1.2",
        "@babel/plugin-proposal-class-properties": "^7.1.0",
        "@babel/plugin-proposal-decorators": "^7.1.2",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/polyfill": "^7.0.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-typescript": "^7.1.0",
        "babel-loader": "^8.0.4",
        "basichtml": "^0.20.4",
        "clean-webpack-plugin": "^1.0.0",
        "fork-ts-checker-webpack-plugin": "^0.5.2",
        "husky": "^1.1.2",
        "live-server": "^1.2.0",
        "prettier": "^1.14.3",
        "shx": "^0.3.2",
        "sizzle": "^2.3.3",
        "source-map-loader": "^0.2.4",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "tslint-config-standard": "^8.0.1",
        "tslint-plugin-prettier": "^2.0.0",
        "typescript": "^3.2.2",
        "webpack": "^4.8.3",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.4",
        "webpack-merge": "^4.1.2"
    }
}