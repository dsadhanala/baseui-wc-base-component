{
    "compilerOptions": {
        "pretty": true,
        "moduleResolution": "node",
        "target": "es5",
        "module": "es2015",
        "skipLibCheck": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "strictPropertyInitialization": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true,
        "declarationDir": "./lib/cjs",
        "outDir": "./lib/cjs",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types", "./src/_global/types"],
        "baseUrl": ".",
        "paths": {
            "@rootSrc/*": ["src/*"]
        }
    },
    "include": ["./src/**/*.ts"],
    "exclude": ["node_modules", "./src/**/_tests/*.ts", "./demo/tests"]
}